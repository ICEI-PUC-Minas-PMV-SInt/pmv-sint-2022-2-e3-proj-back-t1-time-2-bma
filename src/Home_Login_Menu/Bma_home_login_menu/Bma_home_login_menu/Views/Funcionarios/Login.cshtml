@model Bma_home_login_menu.Models.Funcionario

@{
    ViewData["Title"] = "Login";
}

<h4 class ="d-grid gap-2 col-6 mx-auto" style="text-align:center; margin-top:20px">Portal do Funcionário</h4>
<hr />
<div class="d-grid gap-2 col-6 mx-auto">
    <div>
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:10px">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="d-grid gap-2 col-6 mx-auto">
                <input type="submit" value="Entrar" class="btn btn-outline-success" />
            </div>
            <div class="d-grid gap-2 col-6 mx-auto my-3">
                <a class="btn btn-outline-secondary btn-sm" asp-controller="Home" asp-action="Index">Voltar</a>
            </div>
        </form>
        <h2> @ViewBag.Message</h2>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
